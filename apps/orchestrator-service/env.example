# Application Settings
APP_NAME=TalknShop Orchestrator
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# AWS Configuration
AWS_REGION=us-west-2
# Leave blank to use IAM roles (recommended for production)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# DynamoDB Tables
DYNAMODB_TABLE_NAME=orchestrator-requests
DYNAMODB_CHECKPOINT_TABLE=orchestrator-checkpoints

# AWS Bedrock
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_STREAMING=true
BEDROCK_MAX_TOKENS=2048
BEDROCK_TEMPERATURE=0.7

# Service URLs
MEDIA_SERVICE_URL=http://media-service:8001
CATALOG_SERVICE_URL=http://catalog-service:8002
USE_MOCK_SERVICES=false
USE_MEMORY_CHECKPOINTER=false

# WebSocket Settings
WS_HEARTBEAT_INTERVAL=30
WS_MESSAGE_TIMEOUT=300
WS_MAX_CONCURRENT_CONNECTIONS=1000
WS_RECONNECT_ATTEMPTS=3

# HTTP Client Settings
HTTP_TIMEOUT=30.0
HTTP_MAX_RETRIES=3
HTTP_RETRY_BACKOFF=1.0

# Workflow Settings
MAX_CLARIFICATION_LOOPS=2
SESSION_TTL_HOURS=24
MAX_CONCURRENT_GRAPH_EXECUTIONS=100
RATE_LIMIT_PER_USER=10

# Checkpointing
USE_MEMORY_CHECKPOINTER=false






